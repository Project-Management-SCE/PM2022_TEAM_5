<div class="tab-content">

    @if (isLoading)
    {
        <Loading />
    }
    else
    {
        <div id="soccer" class="container tab-pane active">
            <br>
            <h3>Live Results: @SearchValue </h3>
            <div class="container-fluid">
                <div class="row">
                    @foreach (var index in soccer)
                    {
                        if (index.name != null && index.logo != "")
                        {

                            <a id="@index.id" class=" d-flex col-md-4 col-lg-3 justify-content-center align-content-center" style="background-color:darkgray; margin:10px" @onclick="() => { addFavTeam(index.name); }">
                                <figure class=" flex-column justify-content-center align-content-center">
                                    <img src=@index.logo class="grayscale rounded-circle img-fluid">
                                    <figcaption>@index.name</figcaption>
                                </figure>
                            </a>

                        }
                    }
                </div>
            </div>
        </div>

        <div id="basketBall" class="container tab-pane fade">
            <br>
            <div class="container-fluid">
                <div class="row">
                    @foreach (var index in basketball)
                    {
                        if (index.name != null && index.logo != "")
                        {
                            <a class=" d-flex col-md-4 col-lg-3 justify-content-center align-content-center" style="background-color:darkgray; margin:10px">
                                <figure class=" flex-column justify-content-center align-content-center">
                                    <img src=@index.logo class="grayscale rounded-circle img-fluid">
                                    <figcaption>@index.name</figcaption>
                                </figure>
                            </a>
                        }
                    }
                </div>
            </div>
        </div>

    }
</div>








