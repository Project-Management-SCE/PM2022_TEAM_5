@page
@model WebApplication1.Pages.UserPanelModel
@{ }
<link rel="stylesheet" href="~/css/UserPanel.css" />


<div class="col-md-6 mb-3">
    <div class="_card">
        <div class="_card-body">
            <div class="d-flex flex-column align-items-center text-center">
                @if (Model.profilePic == null)
                 {
                 <img class="rounded-circle" width="150" alt="profile" src="~/img/default_pic.png" />
                 }
                else
                {
                <img class="rounded-circle" width="150" alt="profile" src="data:image/*;base64,@(Convert.ToBase64String(Model.profilePic))" />
                }
                <div class="mt-3">
                    <h4>User Name</h4>
                    <p class="text-secondary mb-1">Email</p>
                    <a class="btn btn-primary" asp-page="/ChangePassword">Edit Password</a>
                    <a class="btn btn-outline-primary" asp-page="/ChangeEmail">Edit Email\Username</a>
                    <a class="btn btn-primary" asp-page="/ProfilePicture">EditPicture</a>
                </div>
            </div>
        </div>
    </div>
</div>